{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": false,
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitThis": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2016",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": ["./packages/components/**/*.ts", "./packages/component/**/*.tsx", "./packages/component/**/*.vue"],
  "exclude": [
    "**/node_modules"
  ],
}


